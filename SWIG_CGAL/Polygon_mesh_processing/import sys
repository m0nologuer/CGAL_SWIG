import sys
sys.path.append("../../../Documents/MeshForge/")
import mesh_segmenter
import CGAL
from CGAL import CGAL_Kernel
from CGAL import CGAL_Polygon_mesh_processing
from CGAL import CGAL_Polyhedron_3
import mesh_segmenter
mesh = mesh_segmenter.mesh.Mesh.load_scene("../../../Documents/Datasets/Labelled_Segmented_Models/Human/10.off")[0]
m = mesh_segmenter.MeshSegmenter()
poly = m.create_polyhedron(mesh)
poly = CGAL.CGAL_Polygon_mesh_processing.Mesh_segmenter(poly).stitch_borders()
list = [x for x in CGAL.CGAL_Polygon_mesh_processing.Mesh_segmenter(poly).segmentation()]
for id,p in enumerate(list):
	p.write_to_file("poly{}.off".format(id))